@model PharmacyManagementSystem.Models.PMSSeller

@{
    ViewBag.Title = "LogInAsSeller";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Seller Login</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('../../image/background2.jpg');
            background-size: cover;
            background-repeat: no-repeat;
        }

        .login-container {
            max-width: 400px;
            margin: 100px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index","Home")">
            <img src="~/Image/6612724.png" width="38px" height="38px" />Pharmacy Management System
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AboutUs","Home")">About Us</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="login-container">
            <h2 class="text-center mb-4">Login as Seller </h2>
            @using (Html.BeginForm("LogInAsSeller", "Home", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.HiddenFor(model => model.SelId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.LabelFor(model => model.SelEmail, "Username", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SelEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your Email " } })
                        @Html.ValidationMessageFor(model => model.SelEmail, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.SelPwd, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SelPwd, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter your password" } })
                        @Html.ValidationMessageFor(model => model.SelPwd, "", new { @class = "text-danger" })
                    </div>
                </div>
                @ViewBag.Notification
                <input type="submit" value="LogIn" class="btn btn-dark btn-block" />
            }
        </div>
    </div>
</body>
</html>



